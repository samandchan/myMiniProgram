page {
  background-color: #edece8;
}
.user_img_wrap {
  position: relative;
  height: 40vh;
  overflow: hidden;
}
.user_img_wrap .user_img_bg {
  filter: blur(8rpx);
}
.user_img_wrap .user_info_wrap {
  position: absolute;
  left: 50%;
  transform: translateX(-50%);
  top: 148rpx;
  text-align: center;
  color: #fff;
}
.user_img_wrap .user_info_wrap image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}
.user_img_wrap .user_info_wrap .user_nickname {
  font-size: 34rpx;
  margin-top: 50rpx;
}
.user_content {
  position: relative;
  display: flex;
  justify-content: center;
}
.user_content .user_main {
  position: absolute;
  top: -50rpx;
  width: 94%;
  font-size: 24rpx;
}
.user_content .user_main .collect_wrap {
  display: flex;
  height: 120rpx;
  width: 100%;
  border-radius: 20rpx;
  background-color: #fff;
  margin-bottom: 30rpx;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #ddd;
}
.user_content .user_main .collect_wrap .collect_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  align-items: center;
}
.user_content .user_main .collect_wrap .collect_item text {
  color: var(--themeColor);
}
.user_content .user_main .order_wrap {
  height: 180rpx;
  border-radius: 20rpx;
  background-color: #fff;
  margin-bottom: 20rpx;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #ddd;
}
.user_content .user_main .order_wrap .order_title {
  padding: 12rpx 30rpx;
  font-size: 28rpx;
  border-bottom: 2rpx solid #dedede;
}
.user_content .user_main .order_wrap .order_content {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 20rpx 0;
}
.user_content .user_main .order_wrap .order_content .order_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.user_content .user_main .order_wrap .order_content .order_item text {
  font-size: 38rpx;
  color: #f4f;
}
.user_content .user_main .address_wrap {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 14rpx;
  margin-bottom: 20rpx;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #ddd;
}
.user_content .user_main .address_wrap text {
  color: #ccc;
}
.user_content .user_main .other_wrap {
  padding: 0 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #ddd;
}
.user_content .user_main .other_wrap .other_item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx;
  border-bottom: 2rpx solid #ccc;
}
.user_content .user_main .other_wrap .other_item:last-child {
  border-bottom: none;
}
.user_content .user_main .other_wrap .other_item .icon {
  color: #ccc;
}
.user_content .user_main .share_wrap {
  background-color: #fff;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
  border-radius: 16rpx;
  box-shadow: 1rpx 1rpx 1rpx 1rpx #ddd;
}
.user_content .user_main .share_wrap .share-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
}
.user_content .user_main .share_wrap .share-item .icon {
  color: #ccc;
}
