<!-- 搜索跳转 -->
<SearchInput></SearchInput>
<!-- 轮播图 -->
<view class="index_swiper">
  <swiper indicator-dots autoplay interval="2000" circular
  indicator-color="rgba(0,0,0,.2)" 
  indicator-active-color="#be1aa7">
    <swiper-item 
    wx:for="{{swiperList}}"
    wx:key="goods_id">
      <navigator >
        <image mode="widthFix" src="{{item.image_src}}"/>
      </navigator>
    </swiper-item>
  </swiper>
</view>
